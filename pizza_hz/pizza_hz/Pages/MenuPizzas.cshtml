@page
@model pizza_hz.Pages.MenuPizzasModel
@{
}


<!DOCTYPE html>
<html>
<head>
    <title>Menu des Pizzas</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>

    <div class="logo_menu">
        <a asp-page="Index">
            <img src="~/images/small_logo.png" />
       </a>
    </div>

    <div class="les_pizzas">
        <h1>Les Pizzas</h1>
    </div>
       
    <div class="menu_list">
    @foreach (var item in Model.Pizza)
    {
            <div class="menu_list_item">
                <span class="menu_list_title">@item.nom</span>
                <span class="menu_list_prix">@String.Format("{0:0.00}", item.prix) €</span>
                <span class="menu_list_ingredients">@item.ingredients </span>
                @if (item.vegetarienne)
                {
                    <span class="menu_list_badge">VÉGÉTARIENNE</span>
                }
            </div>
    }
    </div>

</body>
</html>
